@using Backend_Final.Areas.Admin.ViewModels.Color
@model List<ColorViewModel>
<ul class="widgets-category widgets-color">
    <li>
        <a href="#">
            <i class="fa fa-chevron-right"></i>
            All <span>@Model.Count</span>
        </a>
    </li>

    @foreach (var item in Model)
    {
        <li>
            <a asp-route="client-shop-index" asp-route-colorId="@item.Id">
            <i class="fa fa-chevron-right"></i>
            @item.Title 
        </a>
    </li>
    }
    
</ul>
