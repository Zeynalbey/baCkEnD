@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<Backend_Final.Database.Models.Navbar>


@foreach (var navbar in Model)
{
    <li>
        <a asp-route="client-home-index">Home Page</a>
    </li>
    <li>
        <a asp-route="client-shoppage-index">Shop List</a>
    </li>
    <li class="menu-item has-children">
        <a  href="">
            @if (navbar.IsBold)
            {
                <b>@navbar.Title</b>
            }
            else{

            @navbar.Title
            }
            
        </a>
      
            <ul class="sub-menu">
                @foreach (var subNav in navbar.Subnavbars)
                {
                    <li> <a asp-route="@subNav.Url">@subNav.Title</a></li>
                }
            </ul>
        
    </li>

}