            <div class="login-register-area section-space-y-axis-100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                    <form method="POST" asp-route="client-auth-login">
                                <div class="login-form">
                                    <h4 class="login-title">Login</h4>
                                    <div class="row">
                                        <div class="col-lg-12">
                                    <label asp-for="Email">Enter your email address here...</label>
                                    <input asp-for="Email" class="mb-0 form-control" type="text" id="email1" placeholder="Enter you email address here...">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="mb-0 form-control" id="login-password" placeholder="Enter your password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="check-box">
                                                <input type="checkbox" id="remember_me" />
                                                <label for="remember_me">Remember me</label>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 pt-5">
                                            <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                                Login
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
