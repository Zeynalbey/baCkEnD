@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="Product" asp-action="add" target="_blank" class="btn btn-secondary">Add new Product</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Products</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Created at</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Product in Model)
                        {
                            <tr>
                                <td>@Product.Title</td>
                                <td>@Product.Price</td>
                                <td>@string.Join(", ", Product.Categories.Select(c => $"{c.Title}->{c.ParentTitle}"))</td>
                                <td>@Product.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <a asp-route="admin-Product-update" asp-route-id="@Product.Id" ><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-Product-delete" asp-route-id="@Product.Id" id="Product-form-@Product.Id" ></form>
                                    <button type="submit" form="Product-form-@Product.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                    <a asp-route="admin-Product-image-list" asp-route-ProductId="@Product.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>