@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Backend_Final.Areas.Admin.ViewModels.Navbar
@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Books</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-navbar-update">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Url"></label>
                            <input asp-for="Url" class="form-control">
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Order"></label>
                            <input asp-for="Order" class="form-control">
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsBold"></label>
                            <input type="checkbox" asp-for="IsBold" class="form-check-input">
                            <span asp-validation-for="IsBold" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsHeader"></label>
                            <input type="checkbox" asp-for="IsHeader" class="form-check-input">
                            <span asp-validation-for="IsHeader" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsFooter"></label>
                            <input type="checkbox" asp-for="IsFooter" class="form-check-input">
                            <span asp-validation-for="IsFooter" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>