@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Backend_Final.Areas.Client.ViewModels.Blog
@model List<BlogListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-blog-add" class="btn btn-secondary">Add new Blog</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Blogs</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            @*<th>Image</th>*@
                            <th>Name</th>
                            <th>Description</th>
                            <th>Catagory</th>
                          
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td>@blog.Title</td>
                                <td>@blog.Content</td>
                                <td>@string.Join(", ", blog.Categories.Select(c => $"{c.Title}->{c.ParentTitle}"))</td>
                                <td class="text-end">

                                    <a asp-route="admin-blog-update" asp-route-id="@blog.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-blog-delete" asp-route-id="@blog.Id" id="blog-form-@blog.Id"></form>
                                    <button type="submit" form="nav-form-@blog.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                    <a class="btn btn-primary" asp-route="admin-blogDisplay-list" asp-route-blogId="@blog.Id">Blog Image List</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>