@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Backend_Final.Areas.Admin.ViewModels.Payment
@model List<ListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-payment-add" target="_blank" class="btn btn-secondary">Add new payment</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Payments</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Image</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model)
                        {
                            <tr>

                                <td>@payment.Title</td>
                                <td>@payment.Content</td>
                                <td>@payment.IconImage</td>
                                <td class="text-end d-flex mt-3">

                                    <form method="POST" asp-route="admin-payment-delete" asp-route-id="@payment.Id" id="payment-form-@payment.Id"></form>
                                    <button class="border-0" type="submit" form="payment-form-@payment.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>